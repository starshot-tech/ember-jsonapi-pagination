<Input @value={{this.padBy}} @type="number"/>

<button
  type="button"
  data-test-id="minimal-button"
  {{on 'click' (fn (mut this.minimalMode) true)}}>
    Minimal Mode
</button>

<JsonapiPagination
  class="hello"
  @model={{@model.meta.pagination}}
  @goToPage={{this.goToPage}}
  @padBy={{this.padBy}}
  @minimalMode={{this.minimalMode}} />

<JsonapiPagination
  @padBy={{this.padBy}}
  @minimalMode={{this.minimalMode}}
  @model={{@model.meta.pagination}} as |pages|>
    {{#each pages as |page|}}
      <a href="#"
        data-test-id={{page.number}}
        {{on 'click' (fn this.goToPage page.number)}}>
          {{page.number}}
      </a>
    {{/each}}
</JsonapiPagination>

{{outlet}}
